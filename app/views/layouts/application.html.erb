	  <!--[if lt IE 7]><p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p><![endif]-->
	  <header>
      <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
          <div class="container">

            <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </a>
            <%= image_tag('mixxlogo-thumb.png', alt: 'Mixx96', class: 'brand-img')%>
            <%= link_to 'Mixx96Deals', root_url, class: 'brand' %>  
            <div class="nav-collapse collapse">
              <ul class="nav">
                <li class="<%= 'active' if params[:controller] == 'merchants' %>"><%= link_to "Merchants", merchants_path %></li>
              </ul>
              <ul class="nav pull-right">
                <li class="divider-vertical"></li>
                <% if current_user %>
                  <li><%= link_to 'Edit Profile', edit_user_registration_path %></li>
                  <li class="divider-vertical"></li>
                  <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
                <% else %>
                  <li><%= link_to 'Login', new_user_session_path %></li>
                  <li class="divider-vertical"></li>
                  <li><%= link_to 'Register', new_user_session_path %></li>
                <% end %>
              </ul>
            </div> <!-- .nav-collapse collapse -->
          </div>
        </div>
      </div>
  	</header>

  <div class="container">
		<% flash.each do |name, msg| %>
  		<div class="alert alert-<%= name == :notice ? "success" : "error" %>">
    		<a class="close" data-dismiss="alert">Ã—</a>
    		<%= msg %>
  		</div>
		<% end %>

		<div class="row">
      <div id="main" class="span9 pull-right <%= 'white-bg' if params[:controller] != 'site' %>" role="main">
        <div class="pad-box">
          <%= yield %>
        </div>
      </div><!--#main -->
      
      <div class="span3">
  			 <div id="asides" class="clearfix">
          <h1 class="brand"><a href="http://mixx96.com/"><%= image_tag('mixxlogo.png', alt: 'Mixx96')%></a></h1>
          <div class="well sidebar-nav">
  				<h2><%= link_to 'http://twitter.com/mixx96' do %>
                <%= image_tag "twitter-bird-dark-bgs.png", alt: "Twitter", height: '44px', width: '44px', style: 'vertical-align:middle;' %>
                @Mixx96
               <% end %>
            <br/>(360) 943-9937</h2>
          <ul class="nav nav-list">
            <li><a href="/">All Categories</a></li>
            <% Category.order(:sort).all.each do |category| %>
            <% unless category.offers.empty? %>
              <li><a href="/?category=<%= category.name.parameterize %>" class="<%= "active" if params['category'] == category.name.parameterize %>"><%= category.name %></a></li>
              <% end %>
            <% end %>
          </ul><!-- .nav .nav-list -->

          <div id="mailing-list">
            <!-- Begin MailChimp Signup Form -->
            <div id="mc_embed_signup">
              <form action="http://mixx96.us6.list-manage.com/subscribe/post?u=a0b34a63a5afefb49ab81a5fe&amp;id=f84f41be09" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                <label for="mce-EMAIL">Subscribe to our mailing list</label>
                <input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="email address" required>
                <div class="clear">
                  <input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="btn">
                </div>
              </form>
            </div>
            <!--End mc_embed_signup-->
          </div><!-- mailing-list -->
          <!-- <div class="blend">
            <script src="http://einmaleins.co/blend/members.js" type="text/javascript"></script>
          </div> -->
        </div><!-- .well .sidebar-nav -->
			 </div><!--#asides -->
      </div><!-- span3 -->


			
		</div><!--.row-->
	</div><!--.container-->


